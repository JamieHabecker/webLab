article.g17
	div
		h3.formTitle Odometer Fraud Complaint Form - Step One
		form(novalidate, name="form")
			.formField.radio
				label Which type of odometer fraud are you reporting?
				ul.radioList
					li
						label
							input(type="radio",name="type", data-ng-model="comType", value="1", data-ng-click='one()')
							<span>That you are a victim of odometer fraud</span>
						label
							input(type="radio",name="type", data-ng-model="comType", value="2", data-ng-click='two()')
							<span>That you are aware of an individual, business, or organization that knowingly engages in odometer fraud</span>
				
			.formField.radio(data-ng-show="comType === '2'")
				label May we contact you regarding this complaint?
				ul.radioList
					li
						label
							input(type="radio",name="an", data-ng-model="an", value="Yes", data-ng-click="check()")
							<span>Yes</span>
						label
							input(type="radio",name="an", data-ng-model="an", value="No",  data-ng-click="check()")
							<span>No</span>
			.continue
				button(data-ng-disabled="checkIt", data-ng-click="next()") Continue
			portalcancel
			
